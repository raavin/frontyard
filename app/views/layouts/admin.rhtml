<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
        <title>Admin Interface</title>
        <meta name="keywords" content=""/>
        <meta name="description" content=""/>
        <style type="text/css">
            /*<![CDATA[*/
            #new_client_form {
                background: #440000 url('/images/images_blue/n1.gif') repeat-x;
                color: #fff;
                padding: 10px;
                margin: 20px;
                border: 10px solid pink;
            }
            /*]]>*/
        </style>
        <%= stylesheet_link_tag 'style_blue' %>
        <%= stylesheet_link_tag 'tables' %>
        <%= stylesheet_link_tag 'scaffold' %>

        <script src="javascript/mootools-release-1.11.js" type="text/javascript">
        </script>
        <script src="javascript/effects.js" type="text/javascript">
        </script>
    </head>
    <body>
        <div id="header">
            <div id="header_inner" class="fixed">
                <div id="logo">
                    <h1><span>SKYS Database</span> 0.1 beta</h1>
                    <h2>By Raavin.com</h2>
                </div>
				<% if logged_in? or User.count < 1%>
                
                <div id="menu">
                	
                    <ul>
                        <li>
                            <a href="#" class="active">Logged in as <% if User.count > 0%><%= current_user.login %><%end%></a>
							
                        </li>
                        <li>
                            <%= link_to "Logout", :controller => "account", :action => "logout" %>
                        </li>
							
                        <li>
                            <a href="#">Reports</a>
                        </li>
                        <li>
                            <%= link_to "Frontyard", :controller => "frontyard", :action => "list" %>
                        </li>
                        <li>
                            <a href="#">Help</a>
                        </li>
                    </ul>
					
                </div>
			<div id="lower_menu">
                    <ul>
                        <li>
							<a href="/admin/list" <% if params[:controller] == "admin" %> class="active"<%end%>>Services</a>
                        </li>
                        <li>
							<a href="/categories/list" <% if params[:controller] == "categories" %> class="active"<%end%>>Categories</a>
                        </li>
                        <li>
							<a href="/account/list" <% if params[:controller] == "account" %> class="active"<%end%>>Users</a>
                        </li>
                        <li>
							<a href="/roles/list" <% if params[:controller] == "roles" %> class="active"<%end%>>Roles</a>
                        </li>
                    </ul>
                </div>
            </div><%end%>
        </div>
        <div id="main">
            <div id="main_inner" class="fixed">
                <div id="primaryContent_2columns">
                    <div id="columnA_2columns">
                        <br class="clear"/>

                        <p style="color: green">
                            <%= flash[:notice] %>
                        </p>
                        <%= yield %>
                        <%= render :partial => 'layouts/rightpanel' %>
                    </div>
                </div>
                <br class="clear"/>
            </div>
        </div>
        <div id="footer" class="fixed">
            Copyright &copy; Raavin.com. All rights reserved. Design by <a href="http://www.nodethirtythree.com/">NodeThirtyThree Design</a>.
        </div>
    </body>
</html>
